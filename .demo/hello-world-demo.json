{
  "$schema": "https://demotime.show/demo-time.schema.json",
  "title": "Hello World Demo",
  "description": "Simple intro with a slide and code highlight.",
  "version": 2,
  "demos": [
    {
      "title": "Introduction",
      "steps": [
        {
          "action": "openSlide",
          "path": ".demo/slides/intro.md"
        }
      ]
    },
    {
      "title": "Show the end slide",
      "description": "Show the end slide.",
      "steps": [
        {
          "action": "openSlide",
          "path": ".demo/slides/intro-end.md"
        }
      ]
    },
    {
      "id": "demo-mg8fz4wd-wq0m",
      "title": "Typesafe Link",
      "steps": [
        {
          "action": "highlight",
          "path": "src/components/event/event-management-card.tsx",
          "position": "19",
          "highlightWholeLine": true
        },
        {
          "action": "positionCursor",
          "path": "src/components/event/event-management-card.tsx",
          "position": "19,17",
          "highlightWholeLine": true
        },
        {
          "action": "executeVSCodeCommand",
          "command": "editor.action.triggerSuggest"
        }
      ]
    },
    {
      "id": "demo-mg8gigig-xqnq",
      "title": "Typesafe Search",
      "steps": [
        {
          "action": "positionCursor",
          "path": "src/routes/index.tsx",
          "position": "32,8",
          "highlightWholeLine": true
        },
        {
          "action": "waitForTimeout",
          "timeout": 1500
        },
        {
          "action": "executeVSCodeCommand",
          "command": "editor.action.showHover"
        }
      ],
      "notes": {
        "path": ".demo/notes/demo-mg8gigig-xqnq_notes.md"
      }
    }
  ]
}
